{
    "exclude": ["node_modules", "public", ".cache"],
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitHelpers": true,
        "importHelpers": true,
        "jsx": "react",
        "lib": ["esnext", "dom", "scripthost"],
        "strict": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "rootDir": "src",
        "baseUrl": "./src",
        "paths": {
            "~/*": ["./*"]
        }
    }
}
